XDG_CONFIG_HOME		DEFAULT=@{HOME}/.config
XDG_CACHE_HOME		DEFAULT=@{HOME}/.cache
XDG_DATA_HOME		DEFAULT=@{HOME}/.local/share

GNUPGHOME		DEFAULT=${XDG_CONFIG_HOME}/gnupg

LESSHISTFILE		DEFAULT=${XDG_CACHE_HOME}/less/history
LESSKEY			DEFAULT=${XDG_CONFIG_HOME}/less/lesskey

XAUTHORITY		DEFAULT=${XDG_RUNTIME_DIR}/X11/xauthority
XINITRC			DEFAULT=${XDG_CONFIG_HOME}/X11/xinitrc

ELINKS_CONFDIR		DEFAULT=${XDG_CONFIG_HOME}/elinks

VISUAL			DEFAULT="nvim"
EDITOR			DEFAULT="nvim"
SUDO_EDITOR		DEFAULT="nvim -Z"
SYSTEMD_EDITOR		DEFAULT="nvim -Z"

TERMINAL		DEFAULT=termite
